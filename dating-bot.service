[Unit]
Description=Dating Telegram Bot
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/tgbotSergeyon777
Environment="PATH=/usr/bin:/usr/local/bin"
ExecStart=/usr/bin/python3 bot.py
Restart=always
RestartSec=10
StandardOutput=append:/var/log/dating-bot.log
StandardError=append:/var/log/dating-bot-error.log

[Install]
WantedBy=multi-user.target

